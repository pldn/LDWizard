{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "listFiles": false,
    "rootDir": ".",
    "jsx": "react",
  },
  "include": ["./src/**/*", "./webpack/**/*"],
  "exclude": ["node_modules"],
  "files":["./typings-custom/main.d.ts"],
  "compileOnSave": false
}
